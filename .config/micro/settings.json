{
    "colorscheme": "farvardin",
    "ignorecase": false,
    "pluginchannels": [
        "https://raw.githubusercontent.com/micro-editor/plugin-channel/master/channel.json"
    ],
    "pluginrepos": [],
    "savecursor": true,
    "scrollbar": true,
    "softwrap": true,
    "statusformatl": "$(filename) | $(modified)$(overwrite)$(line)/$(lines),$(col) | $(status.size) $(status.paste)| ft:$(opt:filetype) | $(opt:fileformat) | $(opt:encoding)",
    "statusformatr": "$(status.branch) | $(status.hash)  | $(bind:ToggleHelp): help",
    "wordwrap": true
}
